<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/contact_profile_image_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:layout_width="65dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/contact_name_view"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@null"
            android:paddingLeft="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:hint="Contact's Name: "
            />
        <EditText
            android:id="@+id/contact_phone_number_view"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@null"
            android:paddingLeft="8dp"
            android:textSize="14sp"
            android:hint="Contact Phone Number"
             />
        </LinearLayout>

        <Button
            android:id="@+id/callButton"
            android:background="@drawable/wifi_calling"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/video_call_Button"
            android:background="@drawable/video_calling"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>
    </android.support.v7.widget.CardView>